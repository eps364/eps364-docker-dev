# Environment variables for docker-compose services
# Change the placeholder passwords before using in production.

# Keycloak
KEYCLOAK_IMAGE=quay.io/keycloak/keycloak:26.0
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin
KEYCLOAK_PORT=8080
KEYCLOAK_HOSTNAME=localhost
KC_DB_IMAGE=postgres:15
KC_DB_NAME=keycloak
KC_DB_USERNAME=keycloak
KC_DB_PASSWORD=keycloak
KC_DB_EXTERNAL_PORT=5432

# Postgres (generic service)
POSTGRES_IMAGE=postgres:17
POSTGRES_CONTAINER_NAME=postgres-17
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=postgres
POSTGRES_PORT=5432
POSTGRES_INITDB_ARGS=--encoding=UTF8 --locale=pt-br.UTF-8

# MailHog
MAILHOG_IMAGE=mailhog/mailhog:latest
MAILHOG_SMTP_PORT=1025
MAILHOG_WEB_PORT=8025
MAILHOG_NAME=mailhog

# Portainer
PORTAINER_IMAGE=portainer/portainer-ce:latest
PORTAINER_PORT=9443
PORTAINER_NAME=portainer

# SonarQube
SONARQUBE_IMAGE=sonarqube:8.8-community
SONARQ_PORT=9000
SONARQ_DB_IMAGE=postgres:13
SONARQ_DB_HOST=db
SONARQ_DB_PORT=5432
SONARQ_DB_NAME=sonarqube
SONARQ_DB_USER=sonar
SONARQ_DB_PASSWORD=sonar

