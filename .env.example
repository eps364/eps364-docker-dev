# =============================================================================
# ENVIRONMENT VARIABLES - Docker Compose Services
# =============================================================================
# For development, all passwords are set to: senha123
# ⚠️  CHANGE ALL PASSWORDS BEFORE USING IN PRODUCTION!
# =============================================================================

# =============================================================================
# postgres/ - PostgreSQL Database Service
# =============================================================================
POSTGRES_IMAGE=postgres:17
POSTGRES_CONTAINER_NAME=postgres-17
POSTGRES_USER=postgres
POSTGRES_PASSWORD=senha123
POSTGRES_DB=postgres
POSTGRES_PORT=5432
POSTGRES_HOST=localhost
POSTGRES_INITDB_ARGS=--encoding=UTF8 --locale=pt-br.UTF-8

# =============================================================================
# keycloak/ - Keycloak IAM Service
# =============================================================================
KEYCLOAK_IMAGE=quay.io/keycloak/keycloak:26.0
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=senha123
KEYCLOAK_PORT=8080
KEYCLOAK_HOSTNAME=localhost

# Keycloak Database (PostgreSQL)
KC_DB_IMAGE=postgres:15
KC_DB_HOST=keycloak-db
KC_DB_NAME=keycloak
KC_DB_USERNAME=keycloak
KC_DB_PASSWORD=senha123
KC_DB_PORT=5432
KC_DB_EXTERNAL_PORT=5433

# =============================================================================
# mailhog/ - MailHog Email Testing Service
# =============================================================================
MAILHOG_IMAGE=mailhog/mailhog:latest
MAILHOG_NAME=mailhog
MAILHOG_SMTP_PORT=1025
MAILHOG_WEB_PORT=8025

# =============================================================================
# portainer/ - Portainer Docker Management UI
# =============================================================================
PORTAINER_IMAGE=portainer/portainer-ce:latest
PORTAINER_NAME=portainer
PORTAINER_PORT=9443

# =============================================================================
# sonar/ - SonarQube Code Quality Service
# =============================================================================
SONARQUBE_IMAGE=sonarqube:8.8-community
SONARQ_PORT=9000

# SonarQube Database (PostgreSQL)
SONARQ_DB_IMAGE=postgres:13
SONARQ_DB_HOST=db
SONARQ_DB_PORT=5432
SONARQ_DB_NAME=sonarqube
SONARQ_DB_USER=sonar
SONARQ_DB_PASSWORD=senha123

# =============================================================================
# mysql/ - MySQL Database Service
# =============================================================================
MYSQL_IMAGE=mysql:8.1
MYSQL_CONTAINER_NAME=mysql-8
MYSQL_ROOT_PASSWORD=senha123
MYSQL_DATABASE=appdb
MYSQL_USER=appuser
MYSQL_PASSWORD=senha123
MYSQL_PORT=3306

# =============================================================================
# redis/ - Redis Cache Service
# =============================================================================
REDIS_IMAGE=redis:7-alpine
REDIS_CONTAINER_NAME=redis-7
REDIS_PORT=6379
# Optional: set a password for Redis (if you enable requirepass in your redis config)
REDIS_PASSWORD=

# =============================================================================
# apache/ - Apache HTTP Server Service
# =============================================================================
APACHE_IMAGE=httpd:2.4
APACHE_CONTAINER_NAME=apache-2.4
APACHE_PORT=8080

# =============================================================================
# wordpress/ - WordPress CMS Service
# =============================================================================
WORDPRESS_IMAGE=wordpress:6.4-apache
WORDPRESS_CONTAINER_NAME=wordpress
WORDPRESS_PORT=8000

# WordPress Database Configuration
WORDPRESS_DB_HOST=mysql:3306
WORDPRESS_DB_USER=wordpress
WORDPRESS_DB_PASSWORD=senha123
WORDPRESS_DB_NAME=wordpress_db

# WordPress MySQL
WORDPRESS_MYSQL_CONTAINER_NAME=wordpress-mysql
MYSQL_DB_USER=wordpress

# WordPress Redis
REDIS_HOST=redis
WORDPRESS_REDIS_CONTAINER_NAME=wordpress-redis

# =============================================================================
# grafana/ - Grafana Monitoring & Analytics Service
# =============================================================================
GRAFANA_IMAGE=grafana/grafana:latest
GRAFANA_CONTAINER_NAME=grafana
GRAFANA_PORT=3002
GRAFANA_ROOT_URL=http://localhost:3002

# Grafana Admin Credentials
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=senha123

# Optional: Install plugins (comma-separated)
# GRAFANA_INSTALL_PLUGINS=grafana-clock-panel,grafana-simple-json-datasource

# =============================================================================
# graylog/ - Graylog Log Management Service
# =============================================================================
GRAYLOG_IMAGE=graylog/graylog:5.2
GRAYLOG_CONTAINER_NAME=graylog
GRAYLOG_HTTP_EXTERNAL_URI=http://localhost:9000/

# Graylog Ports
GRAYLOG_HTTP_PORT=9000
GRAYLOG_SYSLOG_TCP_PORT=1514
GRAYLOG_SYSLOG_UDP_PORT=1514
GRAYLOG_GELF_TCP_PORT=12201
GRAYLOG_GELF_UDP_PORT=12201

# Graylog Security
# Password secret: minimum 16 characters
GRAYLOG_PASSWORD_SECRET=forpasswordencryption
# Root password (SHA2 hash of 'senha123')
# Generate new hash with: echo -n "senha123" | sha256sum
GRAYLOG_ROOT_PASSWORD_SHA2=8c6976e5b5410415bde908bd4dee15dfb167a9c873fc4bb8a81f6f2ab448a918

# Graylog MongoDB
MONGODB_IMAGE=mongo:6.0
GRAYLOG_MONGODB_CONTAINER_NAME=graylog-mongodb

# Graylog Elasticsearch
ELASTICSEARCH_IMAGE=docker.elastic.co/elasticsearch/elasticsearch:7.17.16
GRAYLOG_ELASTICSEARCH_CONTAINER_NAME=graylog-elasticsearch

